:root
  --box-background-color #d8d8d8

body
  margin 0
  background-color #000

  &::-webkit-scrollbar
    width 0px
    height 0px

*
  user-select none
  -webkit-user-drag none
  user-drag none

::-webkit-scrollbar
  width 7px
  height 7px

::-webkit-scrollbar-track
  margin 20px 0
  background #c6c6c6

::-webkit-scrollbar-thumb
  background #545454

#app
  display flex
  justify-content center
  align-items center
  overflow hidden
  width 100vw
  width var(--window-w)
  height 100vh
  height var(--window-h)

.win-btn
  width 600px

.show
  opacity 1 !important

.hide
  opacity 0

.hidden
  overflow hidden !important

.fade-enter-active
.fade-leave-active
  transition all 0.2s

.fade-enter-from
.fade-leave-to
  opacity 0

.fade-enter-to
.fade-leave-from
  opacity 1

.box-slide-bottom-enter-active
.box-slide-bottom-leave-active
  transition opacity 1s, transform 0.35s ease-out

.box-slide-bottom-enter-from
.box-slide-bottom-leave-to
  opacity 0
  transform translateY(-5%)